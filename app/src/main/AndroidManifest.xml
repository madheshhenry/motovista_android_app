<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.splashactivity">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- For Android 12 and below -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- For Android 13+ (images only) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.SplashActivity"
        android:usesCleartextTraffic="true">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <!-- Splash -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Dashboard -->
        <activity android:name=".MainActivity" android:exported="false" />
        <activity android:name=".UserHomeActivity" android:exported="true" />

        <!-- Login -->
        <activity android:name=".UserLoginActivity" android:exported="true" />
        <activity android:name=".AdminLoginActivity" android:exported="true" />

        <!-- Account & Profile -->
        <activity android:name=".CreateAccountActivity" android:exported="true" />
        <activity android:name=".ProfileSetupActivity" android:exported="true" />

        <!-- Admin Dashboard -->
        <activity android:name=".admin.AdminDashboardActivity" android:exported="true" />
        <activity android:name=".admin.CustomerDetailsActivity" />
        <activity android:name=".admin.EmiLedgerActivity" />
        <activity android:name=".admin.RegisterLedgerActivity" />
        <activity android:name=".admin.InsuranceDetailsActivity" />
        <activity android:name=".admin.NotificationActivity" />
        <activity android:name=".admin.ApplicationActivity" />
        <activity android:name=".admin.NewBikesActivity" />
        <activity android:name=".admin.SecondHandBikesActivity" />

    </application>

</manifest>
