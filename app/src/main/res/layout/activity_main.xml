<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <!-- Top ribbon -->
    <TextView
        android:id="@+id/titleRibbon"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@color/ribbon_orange"
        android:text="SANTHOSH BIKES"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"/>

    <!-- Bike image (big) -->
    <ImageView
        android:id="@+id/bikeImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bike_landing"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/titleRibbon"
        app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="bike"/>

    <!-- Buttons container (centered) -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp">

        <Button
            android:id="@+id/userLoginBtn"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:text="USER LOGIN"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_primary"
            android:layout_marginBottom="14dp"/>

        <Button
            android:id="@+id/adminLoginBtn"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:text="ADMIN LOGIN"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_secondary"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
